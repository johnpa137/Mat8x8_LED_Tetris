// full adder
module fullAdder(sum, cout, a, b, cin);
	output logic sum, cout;
	input logic a, b, cin;
	
	logic x; // xor output
	
	always_comb begin
		x = a ^ b;
		cout = (x & cin) | (a & b);
		sum = a ^ b ^ cin;
	end
endmodule 

module fullAdder_testbench();
	logic sum, cout;
	logic a, b, cin;
	
	fullAdder dut(.sum, .cout, .a, .b, .cin);
	
	integer i;
	logic [2:0] ins;
	
	assign ins = {a, b, cin};
	
	initial begin
	#50;  
	for(i = 0; i < 7; i++) begin
		ins <= i; #100;
	end
	$stop;
	end
endmodule 